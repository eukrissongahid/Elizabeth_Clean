<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel='icon' href='{{ 'favicon.ico' | asset_url }}' type='image/x-icon'>
    <link rel="canonical" href="{{ canonical_url }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{ content_for_header }}
    <link href="{{ 'application.css' | asset_url }}" rel="stylesheet" />
    <link href="{{ 'fonts.css' | asset_url }}" rel="stylesheet" />
    <script src="{{ 'application.js' | asset_url }}" defer></script>
    <script type="module" src="{{ 'carousel.js' | asset_url }}"></script>
    <style>[x-cloak] { display: none !important; }</style>
    <script src="{{ 'ajax-filters.js' | asset_url }}" defer></script>
    <script src="{{ 'product-variant-selector.js' | asset_url }}" defer></script>
  </head>
  <body class="font-inter">
    {% section 'header' %}
    <main role="main" class="h-full">
      {{ content_for_layout }}
    </main>
  </body>
</html>
