{% comment %} <div class='p-4 lg:p-8'>
  <div class='flex flex-col lg:flex-row min-h-screen'>
    <!-- Filter Sidebar -->
    <aside class="w-full lg:w-64 min-w-[250px] bg-gray-100 p-4 rounded-md">
      <form method='get' class='space-y-8'>
        {% for current_filter in collection.filters %}
          {% if current_filter.values.size > 0 %}
            <div>
              <!-- Filter Group Label -->
              <p class='text-base font-semibold text-orange-700 mb-3 border-b border-orange-300 pb-1'>
                {{ current_filter.label }}
              </p>

              <!-- Sorted Filter Values -->
              {% assign sorted_values = current_filter.values | sort: 'label' %}
              <div class='space-y-3 max-h-60 overflow-y-auto pr-2'>
                {% for value in sorted_values %}
                  <label class='flex items-center text-gray-800 cursor-pointer hover:text-orange-600 transition-colors duration-200'>
                    <input
                      type='checkbox'
                      name='{{ current_filter.param_name }}'
                      value='{{ value.value }}'
                      {% if value.active %}
                        checked
                      {% endif %}
                      class='form-checkbox text-orange-600 h-5 w-5 mr-3 cursor-pointer'
                    >
                    <span class='select-none'>
                      {{- value.label }}
                      <span class='text-gray-400 ml-1'>({{ value.count }})</span>
                    </span>
                  </label>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </form>
    </aside>

    <!-- Product Grid -->
    <main class='w-full lg:flex-1 p-4 bg-white'>
      <div class='w-full h-ful p-4 lg:p-6 bg-white'>
        <div id='ProductGrid' class='mx-auto'>
          {% paginate collection.products by 4 %}
            <h1 class='text-3xl font-semibold mb-8 text-orange-600'>{{ collection.title }}</h1>

            <div class="flex flex-wrap justify-center md:justify-start gap-4">
              {% for product in collection.products %}
                {% render 'product-card-new', product_product: product %}
              {% else %}
                <p class='text-gray-600 col-span-full text-center'>There are no products found!</p>
              {% endfor %}
            </div>

            {% render 'pagination', pagination: paginate %}
          {% endpaginate %}
        </div>
      </div>
    </main>
  </div>
</div> {% endcomment %}

<div class='p-4 lg:p-8'>
  <div class='flex flex-col lg:flex-row min-h-screen'>
    {% section 'main-collection-filters' %}
    <div class="w-full h-full">
      {% section 'main-collection-product-grid' %}
    </div>
  </div>
</div>
